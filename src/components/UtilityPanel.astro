---
interface Props {
  title: string;
  value: string;
  id: string;
}

const { title, value, id } = Astro.props;
---

<div
  id={`panel-${id}`}
  class="bg-navy-700 p-3 rounded-lg text-center transition-colors duration-300 shadow-lg border border-navy-600"
>
  <p class="font-semibold text-text-muted text-sm">{title}</p>
  <p
    id={id}
    class="text-xl font-bold text-accent-orange drop-shadow-[0_0_2px_rgba(255,159,28,0.5)]"
  >
    {value}
  </p>
</div>
