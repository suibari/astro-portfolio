          if (!postData.posts || postData.posts.length === 0) {
            throw new Error('Post not found');
          }
          const post = postData.posts[0];
          
          // Blueskyã®æŠ•ç¨¿ãƒ‡ãƒ¼ã‚¿ã‹ã‚‰å¿…è¦ãªæƒ…å ±ã‚’æŠ½å‡º
          const postValue = post.record as any;
