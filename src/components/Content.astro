---
import { Image } from 'astro:assets';
export interface ContentProps {
  title: string;
  image: string;
  date: string;
  link: string;
}

const { title, image, date, link } = Astro.props as ContentProps;
---
<div class="content">
  <a href={link} target="_blank" rel="noopener noreferrer">
    {image && <Image src={image} alt={title} width={200} height={200} />}
    <div class="content-details">
      <h3>{title}</h3>
      <p>{date}</p>
    </div>
  </a>
</div>

<style>
.content {
  border: 1px solid #ddd;
  border-radius: 8px;
  overflow: hidden;
  text-align: center;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s, box-shadow 0.2s;
  background-color: #f9f9f9;
  margin-bottom: 20px;
  /* object-fit: contain;
  width: 100%;
  height: 100%; */
}
.content:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
}
.content img {
  width: 100%;
  height: auto;
  display: block;
}
.content-details {
  padding: 15px;
}
.content-details h3 {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}
.content-details p {
  color: #666;
  font-size: 14px;
}
</style>
