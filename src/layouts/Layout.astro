---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.png" type="image/png" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Dela+Gothic+One&family=VT323&family=M+PLUS+Rounded+1c&family=DotGothic16&display=swap"
			rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>S.O.S.!! -Suibari Website-</title>
		<!-- OGP -->
		<meta property="og:title" content="S.O.S.!! -Suibari Website-" />
		<meta property="og:description" content="すいばりのウェブサイト" />
		<meta property="og:image" content="/ogp.png" />
		<meta property="og:url" content="https://suibari.com" />
		<!-- 自身のURLに置き換えてください -->
		<meta property="og:type" content="website" />
	</head>
	<body class="m-0 w-full h-full relative">
		<div class="fixed inset-0 w-full h-full z-0 pointer-events-none">
			<!-- Base Color -->
			<div class="absolute inset-0 bg-navy-900"></div>

			<!-- Image with improved visibility -->
			<div
				class="absolute inset-0 bg-[url('/images/bsky_bot_bg.png')] bg-cover bg-center scale-90 opacity-100 blur-sm"
			>
			</div>

			<!-- Gradient Overlays -->
			<div
				class="absolute inset-0 bg-gradient-to-b from-navy-900/50 via-navy-900/70 to-navy-900"
			>
			</div>
			<div
				class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_0%,#0a192f_90%)]"
			>
			</div>
		</div>
		<Header />
		<slot />
		<Footer />
		<script>
			document.addEventListener("DOMContentLoaded", () => {
				const elements = document.querySelectorAll(".fade-in-element");
				elements.forEach((element, index) => {
					setTimeout(() => {
						element.classList.add("visible");
					}, index * 100);
				});
			});
		</script>
	</body>
</html>
