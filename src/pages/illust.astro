---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Content from "../components/Content.astro";
import fetchPixivArtworks from "../services/illust/fetchPixivArtworks";

const illustrations = await fetchPixivArtworks(); // PixivのAPIからイラストデータを取得
---

<Layout>
  <div class="relative z-10 md:px-20 pt-8">
    <h1
      class="text-4xl vt323-regular mb-8 text-center text-accent-orange drop-shadow-[0_0_5px_rgba(255,107,107,0.3)]"
    >
      ILLUSTRATIONS
    </h1>
    <div class="fade-in-element">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 w-full p-2">
        {
          illustrations.map(
            (item: {
              title: String;
              image: String;
              date: String;
              link: String;
            }) => (
              <Content
                title={item.title}
                image={item.image}
                date={item.date}
                link={item.link}
              />
            ),
          )
        }
      </div>
    </div>
  </div>
</Layout>
