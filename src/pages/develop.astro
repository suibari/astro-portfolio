---
import Layout from '../layouts/Layout.astro';
import Content from '../components/Content.astro';
import { developments } from '../data/developments.ts';
---
<Layout>
  <h1>開発したもの一覧</h1>
  <div class="grid">
    {developments.map((project) => (
      <Content 
        title={project.title}
        image={project.image}
        date={project.date}
        link={project.link}
      />
    ))}
  </div>
</Layout>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); /* レスポンシブ対応 */
    gap: 20px;
    margin: 20px 0;
  }
  h1 {
    text-align: center;
    margin: 30px 0;
  }
</style>
